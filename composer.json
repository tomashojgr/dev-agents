{
    "name": "tomashojgr/dev-agents",
    "description": "PHP development workflow automation via AI-powered CLI agents (spec, approve, code, commit, lint, release)",
    "type": "composer-plugin",
    "license": "MIT",
    "require": {
        "php": ">=8.4",
        "composer-plugin-api": "^2.9"
    },

    "bin": [
        "agents/spec/da-spec",
        "agents/approve/da-approve",
        "agents/code/da-code",
        "agents/commit/da-commit",
        "agents/lint/da-lint",
        "agents/release/da-release"
    ],
    "autoload": {
        "psr-4": {
            "DevAgents\\": "src/"
        }
    },
    "extra": {
        "class": "DevAgents\\Plugin"
    },
    "config": {
        "sort-packages": true
    }
}
